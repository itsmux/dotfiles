" .vimrc

syntax enable

" colorscheme desert
set background=dark

set history=700
set ignorecase
set smartcase
set hlsearch

set nobackup
set nowb
set noswapfile

set expandtab
set smarttab
" 1 tab == 4 spaces
set shiftwidth=4
set tabstop=4


" Enable filetype plugins
filetype plugin on
filetype indent on

